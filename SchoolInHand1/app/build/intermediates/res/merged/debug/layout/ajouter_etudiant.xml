<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="-1dp"
    android:paddingTop="-1dp" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#003366"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Ajouter Etudiant"
            android:textColor="#ffffff"
            android:textSize="26dp" />
    </LinearLayout>

     <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:paddingTop="25dp" >
        
           <EditText
        android:id="@+id/Etud_Nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:hint="Nom" />

    <EditText
        android:id="@+id/Etud_Pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PrÃ©nom" >
        <requestFocus />
        </EditText>

    <EditText
        android:id="@+id/Etud_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="150dp"
        android:hint="Email" >
    </EditText>

    <EditText
        android:id="@+id/Etud_Cin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:hint="Cin" />

    <Spinner
        android:id="@+id/Etud_Classe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp" />

    <Button
        android:id="@+id/EnregEtud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter l&apos;etudiant" 
        android:layout_marginTop="260dp"/>
         
        </RelativeLayout>
        
     
    
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003366"
        android:gravity="center"
        android:layout_marginTop="34dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>